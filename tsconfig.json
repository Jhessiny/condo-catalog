{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "module": "CommonJS",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
