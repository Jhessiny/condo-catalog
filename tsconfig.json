{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "esModuleInterop": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
